<div class="container" style="margin-top 100px auto">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <h2 class="text-right">Hola {{ usuario }} </h2>
            <a href="/admin/login/logout" class="btn btn-secondary">Cerrar sesion <i class="fa fa-sign-out"></i></a>

        </div>
    </div>


    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h2>Listado de Novedades</h2>
        </div>
        <div>
            <div class="col-2 text-right">
                <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
            </div>
        </div>
    </div>

    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                          <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}} </th>
                        <td>{{titulo}} </td>
                        <td>{{{imagen}}} </td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                        </td>

                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>